@using EquiMarket.Models.SearchModels
@model HorseSearchModel

@{
    AjaxOptions options = new AjaxOptions();

    options.HttpMethod = "POST";
    options.Confirm = "Do you wish to submit this form?";
    options.OnBegin = "OnBegin";
    options.OnComplete = "OnComplete";
    options.OnFailure = "OnFailure";
    options.OnSuccess = "OnSuccess";
    options.LoadingElementId = "ajaxProgress";
    options.LoadingElementDuration = 1000;
    options.UpdateTargetId = "divResponse";
    options.InsertionMode = InsertionMode.InsertAfter;
}


<div class="well well-lg">

    <h3>Filter</h3>

    @using (Ajax.BeginForm("Search", "Horse", options))
    {
        <fieldset>

            @*Price*@
            <div class="form-group">
                @Html.LabelFor(model => model.PriceFrom, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(Model => Model.PriceFrom)
                    @Html.ValidationMessageFor(Model => Model.PriceFrom)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PriceTo, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(Model => Model.PriceTo)
                    @Html.ValidationMessageFor(Model => Model.PriceTo)
                </div>
            </div>

            @*Age*@
            <div class="form-group">
                @Html.LabelFor(model => model.AgeFrom, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(Model => Model.AgeFrom)
                    @Html.ValidationMessageFor(Model => Model.AgeFrom)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AgeTo, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(Model => Model.AgeTo)
                    @Html.ValidationMessageFor(Model => Model.AgeTo)
                </div>
            </div>
             
            @*KVH*@
            <div class="form-group">
                @Html.LabelFor(model => model.KVHFrom, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(Model => Model.KVHFrom)
                    @Html.ValidationMessageFor(Model => Model.KVHFrom)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.KVHTo, new { @class = "control-label col-md-2" })
                 <div class="col-md-10">
                    @Html.TextBoxFor(Model => Model.KVHTo)
                    @Html.ValidationMessageFor(Model => Model.KVHTo)
                </div>
            </div>

            @*Breed*@

            <input type="submit" value="Search" />

        </fieldset>
    }

    <div id="ajaxProgress" />
    <div id="divResponse" />
    <div id="divMsg" />

</div>


